      <label for="my-modal-3" class="btn btn-sm btn-circle absolute right-2 top-2">✕</label>
      <form action="/login" method="POST">
        <div class="form-control">
          <label class="label">
            <h3 class="text-3xl lg:text-xl">Email</h3>
          </label>
          <input type="email" name="email" placeholder="email" class="input input-lg lg:input-md input-bordered" />
        </div>
        <div class="form-control">
          <label class="label">
            <h3 class="text-3xl lg:text-xl">Password</h3>
          </label>
          <input type="password" name="password" placeholder="password" class="input input-lg lg:input-md input-bordered" />
        </div>
        <div class="form-control mt-6">
          <button type="submit" class="btn btn-primary btn-login btn-lg lg:btn-md">Login</button>
        </div>
      </form>
    </div>
  </div>
  <input type="checkbox" id="my-modal-4" class="modal-toggle" />
  <div class="modal">
    <div class="modal-box relative">
      <label for="my-modal-4" class="btn btn-sm btn-circle absolute right-2 top-2">✕</label>
      <form action="/signup" method="POST">
        <div class="form-control">
          <label class="label">
            <h3 class="text-3xl lg:text-xl">Email</h3>
          </label>
          <input type="email" name="email" placeholder="email" class="input input-lg lg:input-md input-bordered" />
        </div>
        <div class="form-control">
          <label class="label">
            <h3 class="text-3xl lg:text-xl">Password</h3>
          </label>
          <input type="password" name="password" placeholder="password" class="input input-lg lg:input-md input-bordered" />
        </div>
        <div class="form-control">
          <label class="label">
            <h3 class="text-3xl lg:text-xl">Confirm Password</h3>
          </label>
          <input type="password" name="confirmPassword" placeholder="Confirm Password" class="input input-lg lg:input-md input-bordered" />
        </div>
        <div class="form-control mt-6">
